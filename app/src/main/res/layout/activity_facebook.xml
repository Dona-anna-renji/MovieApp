<LinearLayout android:layout_height="match_parent"
    android:background="#F2F1F1"
    android:layout_width="match_parent"
    android:layout_margin="10dp" android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


   <LinearLayout
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="#ffffff"
       android:layout_width="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#0165E1"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:textStyle="bold"
               android:text="Facebook"
               android:textColor="#ffffff"

               android:textSize="20dp" />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="220dp"
               android:background="@drawable/baseline_broken_image_24" />


       </LinearLayout>


       <LinearLayout android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/baseline_account_box_24"
               android:textAlignment="center"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/baseline_account_box_24"
               android:textAlignment="center"/>

       </LinearLayout>


       <LinearLayout
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:layout_marginLeft="20dp"
               android:textSize="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Your Story"/>
           <TextView
               android:layout_marginLeft="25dp"
               android:textSize="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Your Story"/>

       </LinearLayout>
       <LinearLayout
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:orientation="horizontal">
           <ImageView
               android:layout_margin="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/baseline_account_circle_24"
               android:textAlignment="center"/>

           <TextView
               android:layout_marginTop="20dp"
               android:layout_marginLeft="30dp"
               android:textSize="10dp"
               android:gravity="center"
               android:textColor="#606770"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="What's on your mind?"/>


       </LinearLayout>

   </LinearLayout>
    <LinearLayout android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"

                android:background="@drawable/baseline_account_circle_24"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="User Name"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#606770"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="5 min ago"/>


            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:textStyle="normal"
                android:textColor="#050505"
                android:textSize="10dp"
                android:text="This is a sample post content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="334dp"
                android:layout_height="162dp"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:background="#999595" />


        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:textStyle="normal"
                android:textColor="#17A9FD"
                android:textSize="13dp"
                android:text="Like  Comment  Share"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>